generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  patients  patients[]
}


model patients {
  id                  Int       @id @default(autoincrement())
  firstName           String
  middleName          String?
  lastName            String
  dateOfBirth         DateTime
  status              Status
  patient_addresses   patient_addresses[]
  customFields        Json
  user                users?     @relation(fields: [userId], references: [id]) // Optional relationship with User
  userId              Int?
}

model patient_addresses {
  id         Int      @id @default(autoincrement())
  street     String
  city       String
  state      String
  postalCode String
  patient    patients   @relation(fields: [patientId], references: [id])
  patientId  Int
}

enum Status {
  INQUIRY
  ONBOARDING
  ACTIVE
  CHURNED
}
